{
  "name": "@ng-qt/qtest",
  "typings": "./index.d.ts",
  "main": "./index.js",
  "gypfile": true,
  "scripts": {
    "build": "cmake-js compile",
    "test": "qode node_modules/.bin/jest --detectOpenHandles --forceExit",
    "test:ci": "yarn test --ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{cpp,h}": [
      "clang-format -i",
      "git add"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "cmake-js": "5.3.2",
    "node-addon-api": "1.7.1"
  },
  "devDependencies": {
    "@nodegui/nodegui": "0.1.9",
    "@nodegui/qode": "1.0.5",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "husky": "^3.0.5",
    "jest": "24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  }
}
