{
  "name": "@ng-qt/ng-test",
  "typings": "./index.d.ts",
  "version": "0.0.3",
  "main": "./index.js",
  "files": [
    "README.md",
    "LICENSE",
    "index.d.ts",
    "CMakeLists.txt",
    "index.js",
    "src/**/*.cpp",
    "src/**/*.h"
  ],
  "scripts": {
    "postinstall": "if [ -z \"$IGNORE_CWD_INSTALL\" ];then yarn build; endif; fi",
    "install:ci": "IGNORE_CWD_INSTALL=1 yarn install --frozen-lockfile",
    "docs": "typedoc --excludeExternals --includeDeclarations --mode file --out docs index.d.ts",
    "build": "cmake-js compile",
    "test": "qode node_modules/.bin/jest --detectOpenHandles --forceExit",
    "test:ci": "yarn test --ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn docs && yarn run lint-staged"
    }
  },
  "lint-staged": {
    "*.{cpp,h}": [
      "clang-format -i",
      "git add"
    ],
    "index.d.ts": [
      "yarn run docs",
      "git add docs/*"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "cmake-js": "5.3.2",
    "node-addon-api": "1.7.1"
  },
  "devDependencies": {
    "@nodegui/nodegui": "0.2.1",
    "@nodegui/qode": "1.0.5",
    "@types/jest": "27.0.2",
    "@types/node": "12.7.5",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lint-staged": "9.3.0",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "typedoc": "0.15.0",
    "typedoc-plugin-markdown": "2.2.6",
    "typescript": "3.6.3"
  }
}
